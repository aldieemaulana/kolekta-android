<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false" android:state_focused="false" android:state_checked="false"  android:color="@color/colorBlack">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/list_item_radius"/>
            <solid android:color="@color/colorWhiteAccent" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true" android:color="@color/colorWhite">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/list_item_radius"/>
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

</selector>