<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@color/colorLabel" android:state_enabled="true" android:state_pressed="false" android:state_focused="false" android:state_checked="false">
        <shape android:shape="rectangle" >
            <padding android:top="@dimen/component_small" android:bottom="@dimen/component_small"
                android:left="@dimen/component_medium" android:right="@dimen/component_medium"/>
            <corners android:radius="@dimen/shape_rounded"/>
            <solid android:color="@color/colorLabelTransparent" />
            <stroke android:color="@color/colorLabel" android:width="0.5dp"/>
        </shape>
    </item>
    <item android:color="@color/colorWhite" android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle" >
            <padding android:top="@dimen/component_small" android:bottom="@dimen/component_small"
                android:left="@dimen/component_medium" android:right="@dimen/component_medium"/>
            <corners android:radius="@dimen/shape_rounded"/>
            <solid android:color="@color/colorLabel" />
            <stroke android:color="@color/colorLabel" android:width="0.5dp"/>
        </shape>
    </item>

</selector>