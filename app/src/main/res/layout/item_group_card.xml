<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    tools:ignore="RtlSymmetry">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/parentLayout"
        android:clickable="true"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin_small"
        android:paddingStart="@dimen/activity_horizontal_margin_small"
        android:paddingLeft="@dimen/activity_horizontal_margin_small"
        android:paddingEnd="@dimen/activity_horizontal_margin_small"
        android:paddingRight="@dimen/activity_horizontal_margin_small"
        android:background="@drawable/shape_primary_flat"
        android:focusable="true">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageCompanyPhoto"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:riv_oval="true"
            android:src="@drawable/ic_default_user_photo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.aldieemaulana.kolekta.view.AmTextView
            app:Amfont="L"
            android:id="@+id/textFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bogor Base"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/text_small"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/component_medium"
            app:layout_constraintTop_toBottomOf="@id/imageCompanyPhoto"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <com.aldieemaulana.kolekta.view.AmTextView
            app:Amfont="R"
            android:id="@+id/textNumberOfMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="180 Members"
            android:textColor="@color/colorTextHint"
            android:textSize="@dimen/text_extra_small"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/component_extra_small"
            app:layout_constraintTop_toBottomOf="@id/textFullName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>