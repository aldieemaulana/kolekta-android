<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appBar"
    android:layout_alignParentTop="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="0dp">

    <android.support.v7.widget.Toolbar
        app:elevation="0dp"
        android:weightSum="1"
        android:id="@+id/toolbar"
        app:contentInsetStart="@null"
        style="@style/AppTheme.Toolbar"
        android:background="@color/colorTransparent">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/buttonBackToolbar"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:background="@drawable/button_back_transparent"
            android:src="@drawable/ic_chevron_left_primary"/>

        <com.aldieemaulana.kolekta.view.AmTextView
            app:Amfont="M"
            android:id="@+id/textTitleToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_navbar_title" />


    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>