<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appBar"
    android:layout_alignParentTop="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.NoActionBar"
    android:fitsSystemWindows="true"
    app:elevation="0dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetStart="@null"
        style="@style/AppTheme.Toolbar"
        app:elevation="0dp"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/buttonBackToolbar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:layout_marginLeft="@dimen/component_big"
                android:layout_marginStart="@dimen/component_big"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/button_back"
                android:src="@drawable/ic_chevron_left_white"
                android:layout_centerVertical="true"/>

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/buttonActionToolbar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:layout_marginRight="@dimen/component_big"
                android:layout_marginEnd="@dimen/component_big"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_back"
                android:src="@drawable/ic_settings"
                android:layout_centerVertical="true" />

            <com.aldieemaulana.kolekta.view.AmTextView
                app:Amfont="M"
                android:id="@+id/textTitleToolbar"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/component_extra"
                android:layout_marginStart="@dimen/component_extra"
                android:layout_marginRight="@dimen/component_extra"
                android:layout_marginEnd="@dimen/component_extra"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_navbar_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>